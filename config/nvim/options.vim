" global configuration
set history=200
set number
set hidden
set nobackup
set backspace=indent,eol,start
set ruler
set clipboard=unnamed

" search
set hlsearch
set incsearch
set wildmode=longest,list

" indent
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=0

" color schema"
syntax enable
set background=dark
colorscheme solarized
